<h1>Product Catalog</h1>
<div id="products">
    <% @products_list.each do |product| %>
        <div class="product">
            <%= image_tag(product.image)%>
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <p><strong>Price: </strong>$<%= number_with_precision(product.price, precision: 2) %></p>
        </div>
    <% end %>
</div>