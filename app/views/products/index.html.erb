<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <div class="product">
      <%= render product %>
      <p>
        <%= link_to "Show this product", product %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
