<div id="<%= dom_id cart %>">
    <ul>
        <% cart.lineitems.each do |item| %>
            <li style="list-style-type: none">
                <%= item.quantity %> - <%= item.product.name %> - <%= item.product.price %>
            </li>
        <% end %>
    </ul>
    <h3 style="margin: 25px 0">Total Price: <%= cart.total_price %></h3>
    <div id="cart-actions">
        <%= button_to("Empty Cart", @cart, method: :delete, data: { confirm: "Are you sure you want to empty the cart?" }) %>
        <%= button_to("Checkout", new_order_path, method: :get) %>
    </div>
</div>